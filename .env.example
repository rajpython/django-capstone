# .env.example â€” Do NOT include real secrets in this file
# Copy this file to `.env` and fill in the actual values
# cp .env.example .env




DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# Allow multiple hosts separated by commas
ALLOWED_HOSTS=localhost,127.0.0.1

# Use your actual DB credentials for local or remote setup
DATABASE_URL=postgres://your_db_user:your_db_password@localhost:5432/your_db_name

# Trusted frontend domains for CSRF protection
CSRF_TRUSTED_ORIGINS=http://localhost:9100

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password-here
